  <link rel="stylesheet" type="text/css"   href="./public/css/style.css">
</head>
<body>
  <h1>Register</h1>
  <div class="auth">
    <form>
        <div class="row">
            <div class="col">
              <form action="/auth/signup" method="POST">
                <input id="new-email" type="email" class="form-control" name="email" placeholder="Email" class="form-control>
            </div>
            <div class="col">
              <input id="new-name" type="text" class="form-control" name="name" placeholder="Name">
            </div>
            <div class="col">
                <input id="new-password" type="password" class="form-control" name="password" placeholder="Password">
            </div>
          </div>
        <button type="submit" class="btn-btn-primary" value="Sign up">NEXT</button>
      </form>
  </div>
</body>
